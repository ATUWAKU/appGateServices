pipeline {
    agent any
	triggers {
	  upstream 'appGateServices_CI'	
	}
	post { 
		always{
		// SIEMPRE LA SECCIÓN TIENCIA AJUSTE PARA EJECUTAR EN CUALQUIER ESTADO
            emailext body: 
            	'''<body leftmargin="8" marginwidth="0" topmargin="8" marginheight="4" offset="0">
    					<table width="95%" cellpadding="0" cellspacing="0"  style="font-size: 11pt; font-family: Tahoma, Arial, Helvetica, sans-serif">
        					<tr>
            					<td>
            						<b><font color="#0B610B">Build Summary</font></b>
            						<hr size="2" width="100%" align="center" />
            					</td>
        					</tr>
        					<tr>
            					<td>
                					<ul>
                    					<li>Project Name: ${PROJECT_NAME}</li>
                    					<li>Build Number: # ${BUILD_NUMBER}</li>
                    					<li>Build Cause: ${CAUSE}</li>
                    					<li>Build Status: ${BUILD_STATUS}</li>
                    					<li>Build Log: <a href="${BUILD_URL}console">${BUILD_URL}console</a></li>
                    					<li>Build Url: <a href="${BUILD_URL}">${BUILD_URL}</a></li>
                    					<li>Project Url: <a href="${PROJECT_URL}">${PROJECT_URL}</a></li>
                					</ul>
            					</td>
        					</tr>
    					</table>
				   </body>''', 
			subject: '[Jenkins Build Notification] ${PROJECT_NAME} - Build # ${BUILD_NUMBER} - ${BUILD_STATUS}!', 
			to: 'atuwaku1990@gmail.com;', 
			from: 'david_muner@hotmail.com'
        }
		*/
        success {
                         / / Cuando esta tubería se imprime correctamente
            echo 'success'
        }
        failure {
                         // Imprimir el mensaje cuando falla esta tubería
            echo 'failure'
        }
		unstable {
                         // Cuando esta tubería imprime un mensaje cuando instablemente
            echo 'unstable'		
		}
		aborted {
		     // Imprimir el mensaje cuando esta tubería termina
            echo 'aborted'	
		}
		changed {
		     // Imprima el mensaje cuando el estado de la tubería es diferente del estado de construcción anterior
            echo 'changed'			
		}        
    }
    stages {
        stage('Ejecucion') {
            steps {                
				bat 'gradlew clean build test aggregate'
            }
        }		
    }	
}
